{% extends "StcwDeskBundle::layout.html.twig" %}
{% block content %}
<h1>Student</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>                <td>{{ entity.id }}</td>        </tr>
        <tr>
            <th>Lastname</th>                <td>{{ entity.lastname }}</td>        </tr>
        <tr>
            <th>Firstname</th>                <td>{{ entity.firstname }}</td>        </tr>
        <tr>
            <th>Milid</th>                <td>{{ entity.milid }}</td>        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('student') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('student_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('student_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}